<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorDarkGreen"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/destino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="New Battery"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:typeface="monospace"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            style="@style/TextView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:text="Surfer One"/>

        <Spinner
            android:id="@+id/surferOne"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rount_select"
            android:prompt="@id/surferOne">

        </Spinner>

        <TextView
            style="@style/TextView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:text="Surfer Two"/>

        <Spinner
            android:id="@+id/surferTwo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rount_select"
            android:prompt="@id/surferTwo">

        </Spinner>

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="saveBattery"
            android:background="@drawable/rount_button"
            android:text="Save"
            android:textColor="@color/white"/>

    </TableLayout>

</ScrollView>